<% video = obj.video %>
<div id="youtube_image_<%= video.id %>" class="youtube-image">
  <%= src_sets(video.image,video) %>
  <div class="play-button"><i class="fab fa-youtube"></i></div>
  <div class="play-button-background">&nbsp;</div>
</div>

<!-- video modal -->
<% unless @video_modal_exists %>
<div id="youtube_modal" class="modal video-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="youtube_title" class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="embed-responsive embed-responsive-16by9 z-depth-1-half">
          <iframe id="youtube_src" class="embed-responsive-item" src="" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
      <div class="modal-footer">
        <p class="mr-auto" id="youtube_caption"></p>
        <p id="youtube_copyright"></p>
      </div>
    </div>
  </div>
</div>
<% end
@video_modal_exists = true %>

<videotitle id="youtube_title_<%= video.id %>" value="<%= raw(video.name) %>" />
<videosrc id="youtube_src_<%= video.id %>" value="<%= video.description %>" />
<videocaption id="youtube_caption_<%= video.id %>" value="<%= video.caption && obj.include_caption ? raw(video.caption) : raw('&nbsp;') %>" />
<videocaption id="youtube_copyright_<%= video.id %>" value="<%= obj.include_copyright ? "#{raw(copyright(video))}" : raw('&nbsp;') %>" />

