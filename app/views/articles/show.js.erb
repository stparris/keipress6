<% if @page && @page.containers.any? %>
$("#main").html("<%= escape_javascript(render(:partial => 'containers/index', locals: {containers: @page.containers})) %>");
<% end %>
<% if @section %>
if ($('#<%= @section %>').length) {
  var to_Scroll = $('#<%= @section %>').attr('id');
  $('html, body').animate({
      scrollTop: $( '#' + to_Scroll).offset().top
  }, 200);
}
<% end %>
$(".top-link").on("click", function() {
  $('html, body').animate({
    scrollTop: $('body').offset().top
  }, 200);
});
$(".toc-link").on("click", function(e) {
  let link_id = e.target.id;
  if ($('#'+link_id.split('-')[1]).length) {
    $('html, body').animate({
      scrollTop: $('#'+link_id.split('-')[1]).offset().top
    }, 200);
  }
});



