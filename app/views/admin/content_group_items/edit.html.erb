<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>Edit <%= @content_item.name %></h1>
		</div>
		<%= form_for([:admin, @content_item],:html => {:role => 'form', :class => "formFor"}) do |f| %>
		<%= render partial: 'form', locals: {f:f} %>

	</div>
	<div class="col-md-3">
		<%= operations_menu(@content_item,[@content_group]) %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
<% if @content_item.content_type == 'image' %>
		<%= render partial: 'admin/images/image_select_table', locals: {f: f,content: @content_item} %>
<% end %>
		<hr />
		<%= button_tag(type: 'submit', class:"btn  btn-outline-secondary btn-med") do %>
			<i class="icon-ok"></i>
			Save
		<% end %>&nbsp;&nbsp;
		<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med">
			<i class="icon-cancel"></i>
	   	 	Cancel</button>'), admin_content_group_item_path(@content_item)) %>
		<% end %>
	</div>
</div>
