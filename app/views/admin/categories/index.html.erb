<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Categories</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @categories.each do |category| %>
        <tr>
          <td><%= link_to raw(category.name), admin_category_path(category) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_category_path(category) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_category_path(category) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="4">No categories have been defined.</td></tr>') if @categories.count == 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_category_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Category</button>
		<% end %>
	</div>
</div>
