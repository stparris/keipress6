<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1><%= @navigation.name %></h1>
		</div>	
		<%= object_table(@navigation) %>
		<%= link_to edit_admin_navigation_path(@navigation) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_navigation_path(@navigation), method: :delete, data: { confirm: "Delete navigation?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@navigation) %>
	</div>
</div>
<hr/>

<%= render partial: 'admin/navigation_items/index' %>
