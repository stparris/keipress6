<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1>Blog <%= @blog.name %></h1>
		</div>	
		<%= object_table(@blog) %>
		<%= link_to edit_admin_blog_path(@blog) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_blog_path(@blog), method: :delete, data: { confirm: "Delete blog?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@blog) %>
	</div>
</div>
<hr/>
<%= render partial: 'admin/blog_posts/index' %>
