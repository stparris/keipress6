<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Admins</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @admins.each do |admin| %>
        <tr>
        	<td><%= link_to admin.id, admin_admin_path(admin) %></td>
          <td><%= link_to raw(admin.full_name), admin_admin_path(admin) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_admin_path(admin) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_admin_path(admin) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_admin_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
			</tbody>
		</table>
		<%= link_to new_admin_admin_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-user-add"></i> New Admin</button>
		<% end %>
	</div>
</div>
