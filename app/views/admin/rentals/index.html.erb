<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Rentals</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @rentals.each do |rental| %>
        <tr>
        	<td><%= link_to rental.id, admin_rental_path(rental) %></td>
          <td><%= link_to raw(rental.name), admin_rental_path(rental) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_rental_path(rental) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_rental_path(rental) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_rental_path(rental), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="5">No items for this list</td></tr>') unless @rentals.count > 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_rental_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Rental</button>
		<% end %>
	</div>
</div>
