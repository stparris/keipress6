<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Users</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @users.each do |user| %>
        <tr>
        	<td><%= link_to raw(user.id), admin_user_path(user) %></td>
          <td><%= link_to raw(user.full_name), admin_user_path(user) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_user_path(user) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_user_path(user) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="5">No users defined.</td></tr>') if @users.count == 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_user_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><icon class="icon-user-add"></icon> New User</button>
		<% end %>
	</div>
</div>
