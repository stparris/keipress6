<div class="form-group">
	<%= f.label :booking_id %>
	<%= f.select :booking_id, Booking.order('name asc'), :id, :name), {prompt: 'Please Select'}, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :amount %>
	<%= f.select :amount,{'Yes'=>'1','No'=>'0'}, {}, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :details %>
	<%= f.text_area :details, 'data-provider': :summernote, :class => "form-control" %>
</div>
