<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>Edit <%= @mail_server.name %></h1>
		</div>
		<%= form_for([:admin, @mail_server],:html => {:role => 'form', :class => "formFor"}) do |f| %>
			<%= render partial: 'form', locals: {f:f} %>
			<hr />
			<%= button_tag(type: 'submit', class:"btn  btn-outline-secondary btn-med") do %>
				<i class="icon-ok"></i>
				Save
			<% end %>
			<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med btn-right">
				<i class="icon-cancel"></i>
		   	 	Cancel</button>'), admin_mail_server_path(@mail_server)) %>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@mail_server,[]) %>
	</div>
</div>
