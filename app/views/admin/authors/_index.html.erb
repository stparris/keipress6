<div class="row">
	<div class="col-md-2">&nbsp;</div>
	<div class="col-md-8">
		<div class="page-header">
		  <h1>Authors</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @authors.order('name asc').each do |author| %>
        <tr>
        	<td><%= link_to raw(author.id), admin_job_path(author) %></td>
          <td><%= link_to raw(author.name), admin_job_path(author) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_author_path(author) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_jauthor_path(author) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_jauthor_path(author), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-2">&nbsp;</div>
</div>
<div class="row">
	<div class="col-md-2">&nbsp;</div>
	<div class="col-md-8">
		<%= link_to new_admin_author_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Author</button>
		<% end %>
	</div>
	<div class="col-md-2">&nbsp;</div>
</div>
