<div id="content_select">
  <div class="form-group">
    <label for="container_row_css_classes"><%= f.label :css_classes, "CSS space separated class names" %></label>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-default">
          container
        </span>
        <span class="input-group-text" id="inputGroup-sizing-default">
          Fluid?&nbsp;&nbsp;<%= f.check_box :container_fluid, { checked: @container.is_container_fluid? }, 'yes' %>
        </span>
      </div>
      <%= f.text_field :css_classes, value: @container.css_classes ? @container.added_css_classes : '', :class => "form-control" %>
    </div>
  </div>  
	<div class="form-group">
	  <%= f.label :image_id %>
    <%= f.hidden_field :image_id, id: "hidden_image_field" %>
    <p>Selected: <span id="image_text"><%= @container.image ? @container.image.name : "not selected" %></span></p>
	</div>
</div>


