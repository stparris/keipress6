<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>Edit Image Group Item</h1>
		</div>
		<%= form_for([:admin, @image_group_item],:html => {:role => 'form', :class => "formFor"}) do |f| %>
			<%= render partial: 'form', locals: {f:f} %>
			<%= render partial: 'admin/images/image_select_table', locals: {f:f,content: @image_group_item} %>
			<hr />
			<%= button_tag(type: 'submit', class:"btn  btn-outline-secondary btn-med") do %>
				<i class="icon-ok"></i>
				Save
			<% end %>&nbsp;&nbsp;
			<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med ">
				<i class="icon-cancel"></i>
		   	 	Cancel</button>'), admin_image_group_item_path(@image_group_item)) %>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@image_group_item,[@image_group_item.image_group]) %>
	</div>
</div>
