<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>New Image Group Item</h1>
		</div>
		<%= form_for([:admin, @image_group_item],:html => {:role => 'form', :class => "formFor"}) do |f| %>
			<%= render partial: 'form', locals: {f:f} %>
			<hr />
			<%= button_tag(type: 'submit', class:"btn  btn-outline-secondary btn-med") do %>
				<i class="icon-ok"></i>
				Create
			<% end %>
			<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med btn-right">
				<i class="icon-cancel"></i>
		   	 	Cancel</button>'), admin_image_group_path(@image_group_item.image_group)) %>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@image_group_item,[@image_group]) %>
	</div>
</div>
<%= render partial: 'admin/images/image_select', locals: {selected_id:  @image_group_item.image ? @image_group_item.image.id : nil} %>