  <div class="alert alert-danger">
		<%= pluralize(@medi.errors.count, "error") %> prohibited this page from being saved:
	</div>
  <ul>
  <% @medi.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
