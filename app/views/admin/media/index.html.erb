<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Media</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @media.each do |medi| %>
        <tr>
        	<td><%= link_to medi.id, admin_medi_path(medi) %></td>
          <td><%= link_to sanitize(medi.name), admin_medi_path(medi) %></td>
          <td><%= link_to sanitize('<i class="icon-zoom-in"></i>'), admin_medi_path(medi) %></td>
          <td><%= link_to sanitize('<i class="icon-pencil"></i>'), edit_admin_medi_path(medi) %></td>
          <td><%= link_to sanitize('<i class="icon-trash"></i>'), admin_medi_path(medi), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= sanitize('<tr><td colspan="5">No items for this list</td></tr>') unless @media.count > 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_medi_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Medi</button>
		<% end %>
	</div>
</div>
