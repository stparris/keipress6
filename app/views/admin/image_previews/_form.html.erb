<%= f.hidden_field :image_id, value: @image.id %>
<div id="upload_image" class="custom-file-container" data-upload-id="newImageUpload" style="max-width:500px;">
    <label>Upload File <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image"><icon class="icon-arrows-cw"></icon> Reset </a></label>
    <label class="custom-file-container__custom-file" >
      <input name="image_upload[image_file]" type="file" class="custom-file-container__custom-file__custom-file-input" accept="image/*" aria-label="Choose File">
      <input type="hidden" name="MAX_FILE_SIZE" value="2000000" />
      <span class="custom-file-container__custom-file__custom-file-control"></span>
    </label>
    <div class="custom-file-container__image-preview" style="height: 333px;"></div>
</div>
