<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Palettes</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Colors</th>
<% if @admin.role == 1 %>
					<th></th>
					<th></th>
					<th></th>
<% end %>				
				</tr>
			</thead>
			<tbody>
<% @palettes.each do |palette| %>
        <tr>
        	<td><%= link_to palette.id, admin_palette_path(palette) %></td>
          <td><%= link_to raw(palette.name), admin_palette_path(palette) %></td>
          <td>
  <% palette.palette_colors.each do |color| %>
  					<div style="border:solid 1px #000;float:left;padding:10px;background-color:#<%= color.value %>;"></div>
  <% end %>       	
    				<div style="clear:left;"></div>
          </td>
	<% if @admin.role == 1 %>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_palette_path(palette) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_palette_path(palette) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_palette_path(palette), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>	
        </tr>
<% end %>
			</tbody>
		</table>
<% if @admin.role == 1 %>
		<%= link_to new_admin_palette_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Palette</button>
		<% end %>
<% end %>
	</div>
</div>
