<% if @calendar.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
		<%= pluralize(@calendar.errors.count, "error") %> prohibited this page from being saved:
	</div>
  <ul>
  <% @calendar.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= f.hidden_field :site_id, value: @site.id %>
<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :parent %> Optional
	<%= f.select :parent, {'No' => 'false', 'Yes' => 'true'}, {}, :class => "form-control" %>
</div>
<div class="form-group">
	<%= f.label :import_url %>
	<%= f.text_field :import_url, :class => "form-control" %>
</div>
<% if action_name == 'edit' %>
<div class="form-group">
	<%= f.label :export_url %>
	<%= f.text_field :export_url, :class => "form-control" %>
</div>
<% end %>
<% if @admin.role == 1 %>
<div class="form-group">
	<%= f.label :icalendar %>
	<%= f.text_area :icalendar, size: '100x200', :class => "form-control" %>
</div>

<% end %>
