<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Domains</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @domains.order('name asc').each do |domain| %>
        <tr>
        	<td><%= link_to domain.id, admin_domain_path(domain) %></td>
          <td><%= link_to raw(domain.name), admin_domain_path(domain) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_domain_path(domain) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_domain_path(domain) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_domain_path(domain), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="5">No domains defined.</td></tr>') if @domains.count == 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_domain_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Domain</button>
		<% end %>
	</div>
</div>
