<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Payment Gateways</h1>
		</div>
		<h5>Friendly reminder: Sensitive settings require ssh access to the server to sync variables such as passwords. </h5>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @payment_gateways.each do |payment_gateway| %>
        <tr>
        	<td><%= link_to payment_gateway.id, admin_payment_gateway_path(payment_gateway) %></td>
          <td><%= link_to raw(payment_gateway.name), admin_payment_gateway_path(payment_gateway) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_payment_gateway_path(payment_gateway) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_payment_gateway_path(payment_gateway) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_payment_gateway_path(payment_gateway), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="5">No items for this list</td></tr>') unless @payment_gateways.count > 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_payment_gateway_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Payment Gateway</button>
		<% end %>
	</div>
</div>
