<div id="content_select">
  <div class="form-group">
    <label for="content_item_css"><%= f.label :css_classes, "CSS space separated class names" %></label>
      <%= f.text_field :css_classes, :class => "form-control" %>
    </div>
  </div>  
  <div class="form-group"> 
    <%= f.label :link_text_id %>
    <%= f.select :link_text_id, LinkText.where(site_id: @site.id).order('name asc').collect { |c| [c.name, c.id] }, @content_item.link_text_id), {prompt: 'Please Select'}, :class => "form-control" %>
  </div>
</div>