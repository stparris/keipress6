<% if @carousel_slide.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <%= pluralize(@carousel_slide.errors.count, "error") %> prohibited this page from being saved:
  </div>
  <ul>
  <% @carousel_slide.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= f.hidden_field :carousel_id, value: @carousel.id %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control" %>
</div>

<div id="navigation_bar_select" class="form-group">
  <div class="form-group">
    <label for="carousel_slide_css_classes">
      <%= f.label :css_classes, "CSS space separated class names" %>
    </label>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-default">carousel-item</span>
      </div>
      <%= f.text_field :css_classes, value: @carousel.css_classes ? @carousel.added_css_classes : '', :class => "form-control" %>
    </div>
  </div>    
</div>

<div class="form-group">
  <%= f.label :caption %>
  <%= f.text_field :caption, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :body %> (HTML)
  <div class="form-control-border">
    <%= f.text_area :body, :class => "form-control codemirror-html" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :image_id %>
  <%= f.hidden_field :image_id, id: "hidden_image_field" %>
  <p>Selected: <span id="image_text"><%= @carousel_slide.image ? @carousel_slide.image.name : "not selected" %></span></p>
</div>
