<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>Edit Carousel Slide</h1>
		</div>
		<%= form_for([:admin, @carousel_slide],:html => {:role => 'form', :class => "formFor"}) do |f| %>
			<%= render partial: 'form', locals: {f:f} %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@carousel_slide,[@carousel_slide.carousel]) %>
	</div>
</div>
<%= render partial: 'admin/images/image_select_table', locals: {selected_id:  @carousel_slide.image ? @carousel_slide.image.id : nil} %>
<div class="row">
	<div class="col-md-9">
			<hr />
			<%= button_tag(type: 'submit', class:"btn  btn-outline-secondary btn-sm") do %>
				<i class="icon-ok"></i>
				Save
			<% end %>
			&nbsp;&nbsp;
			<%= link_to admin_carousel_path(@carousel) do %>
				<button type="button" class="btn  btn-outline-secondary btn-sm" style="float:right;"><i class="icon-cancel"></i> Cancel</button>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-3"></div>
</div>
