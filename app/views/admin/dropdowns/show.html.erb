<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1><%= @dropdown.name %></h1>
		</div>	
		<%= object_table(@dropdown) %>
		<%= link_to edit_admin_dropdown_path(@dropdown) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_dropdown_path(@dropdown), method: :delete, data: { confirm: "Delete dropdown?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@dropdown) %>
	</div>
</div>
<hr/>

<%= render partial: 'admin/dropdown_items/index' %>
