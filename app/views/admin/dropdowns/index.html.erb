<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Dropdowns</h1>
		</div>
		<table id="dropdown_index" class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th>CSS</th>
					<th>Type</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @dropdowns.each do |dropdown| %>
        <tr>
          <td><%= link_to dropdown.name, admin_dropdown_path(dropdown) %></td>
          <td><%= link_to dropdown.css_classes, admin_dropdown_path(dropdown) %></td>
          <td><%= link_to dropdown.nav_type, admin_dropdown_path(dropdown) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_dropdown_path(dropdown) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_dropdown_path(dropdown) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_dropdown_path(dropdown), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="6">No items for this naviation</td></tr>') unless @dropdowns.count > 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_dropdown_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Dropdown</button>
		<% end %>
	</div>
</div>
