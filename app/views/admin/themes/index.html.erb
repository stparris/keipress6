<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Themes</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @themes.each do |theme| %>
        <tr>
        	<td><%= link_to theme.id, admin_theme_path(theme) %></td>
          <td><%= link_to raw(theme.name), admin_theme_path(theme) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_theme_path(theme) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_theme_path(theme) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_theme_path(theme), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
			<%= raw("<tr><td colspan=\"5\">Not themes have been defined for the site.</td></tr>") if @themes.count < 1 %>
			</tbody>
		</table>
		<%= link_to new_admin_theme_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Theme</button>
		<% end %>
	</div>
</div>
