<% if @theme.syntax_errors %>
$("#scss_syntax_error").html("<%= @theme.syntax_errors %>");
$('.edit-scss').css({borderColor:'red'})
$("#scss_error").modal('show');
<% else %>
$('.edit-scss').css({borderColor:'green'})
$("#scss_success").modal('show');
$('#scss_success').on('hidden.bs.modal', function (e) {
  setTimeout(() => { $('.edit-scss').css({borderColor:'#e6e6e6'}) }, 1000);
})
<% end %>


