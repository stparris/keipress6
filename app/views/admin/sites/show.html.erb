<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1><%= @site.name %></h1>
		</div>
		<%= object_table(@site) %>
		<%= link_to edit_admin_site_path(@site) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_site_path(@site), method: :delete, data: { confirm: "Delete site?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@site) %>
	</div>
</div>
<%= render partial: 'admin/site_tags/index' %>
