<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Sites</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @sites.order('name asc').each do |site| %>
        <tr>
        	<td><%= link_to site.id, admin_site_path(site) %></td>
          <td><%= link_to raw(site.name), admin_site_path(site) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_site_path(site) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_site_path(site) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_site_path(site), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
			</tbody>
		</table>
		<%= raw('<tr><td colspan="5">No sites have been defined.</td></tr>') if @sites.count == 0 %>
		<%= link_to new_admin_site_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Site</button>
		<% end %>
	</div>
</div>
