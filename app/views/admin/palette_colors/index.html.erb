<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Palette Colors</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @palette_colors.each do |palette_color| %>
        <tr>
        	<td><%= link_to raw(palette_color.id), admin_palette_color_path(palette_color) %></td>
          <td><%= link_to raw(palette_color.name), admin_palette_color_path(palette_color) %></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_palette_color_path(palette_color) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_palette_color_path(palette_color) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_palette_color_path(palette_color), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-2">&nbsp;</div>
</div>
<div class="row">
	<div class="col-md-2">&nbsp;</div>
	<div class="col-md-8">
		<%= link_to new_admin_palette_color_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Palette Colors</button>
		<% end %>
	</div>
</div>
