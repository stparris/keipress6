<p id="notice"><%= notice %></p>

<h1>Site Tags</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_tags.each do |site_tag| %>
      <tr>
        <td><%= link_to 'Show', site_tag %></td>
        <td><%= link_to 'Edit', edit_site_tag_path(site_tag) %></td>
        <td><%= link_to 'Destroy', site_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

