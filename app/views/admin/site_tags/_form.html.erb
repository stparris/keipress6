<% if @site_tag.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    <%= pluralize(@site_tag.errors.count, "error") %> prohibited this page from being saved:
  </div>
  <ul>
  <% @site_tag.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= f.hidden_field :site_id, value: @site.id %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :tag_type %>
  <%= f.select :tag_type, SiteTag.tag_types, {prompt: 'Please select'}, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label :value %>
  <%= f.text_area :value, :class => "form-control" %>
</div>


