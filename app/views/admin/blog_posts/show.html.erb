<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1><%= @content_item.name %></h1>
		</div>	
		<%= object_table(@content_item) %>
		<%= link_to edit_admin_blog_post_path(@content_item) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_blog_post_path(@content_item), method: :delete, data: { confirm: "Delete blog_post?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@content_item,[@content_item.blog]) %>
	</div>
</div>
