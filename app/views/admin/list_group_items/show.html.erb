<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1>Admin: <%= @list_group_item.name %></h1>
		</div>	
		<%= object_table(@list_group_item) %>
		<%= link_to edit_admin_list_group_item_path(@list_group_item) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_list_group_item_path(@list_group_item), method: :delete, data: { confirm: "Delete list_group_item?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@list_group_item,[@list_group_item.list_group]) %>
	</div>
</div>