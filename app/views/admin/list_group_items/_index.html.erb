<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1><%= @list_group.name %> Items</h1>
		</div>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Position</th>
					<th>Name</th>
					<th>Label</th>
					<th>Item Type</th>
					<th>CSS</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody id="list_group_items" data-sort-items-url="<%= sort_admin_list_group_items_url %>">
<% @list_group.list_group_items.order('position asc').each do |list_group_item| %>
        <tr id="list_group_item_<%= list_group_item.id %>">
        	<td><span class="handle"><i class="icon-up-hand"></i></span></td>	
          <td><%= link_to list_group_item.name, admin_list_group_item_path(list_group_item) %></td>
          <td><%= link_to list_group_item.label, admin_list_group_item_path(list_group_item) %></td>
          <td>
          	<%= link_to list_group_item.item_type.gsub(/_/,' '), admin_list_group_item_path(list_group_item) %>
          </td>
          <td>
  					<%= link_to list_group_item.css_classes, admin_list_group_item_path(list_group_item) %>
  				</td>  
          <td>
  					<%= link_to raw('<i class="icon-zoom-in"></i>'), admin_list_group_item_path(list_group_item) %>
  				</td>  
          <td>
  					<%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_list_group_item_path(list_group_item) %>
  				</td>    
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_list_group_item_path(list_group_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
				<%= raw('<tr><td colspan="8">No list items defined.</td></tr>') if @list_group.list_group_items.count == 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_list_group_item_path(list_group_id: @list_group.id) do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Item</button>
		<% end %>
	</div>
	<div class="col-md-2">&nbsp;</div>
</div>
