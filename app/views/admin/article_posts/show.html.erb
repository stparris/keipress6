<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1>Article post: <%= @article_post.name %></h1>
		</div>
		<%= object_table(@article_post) %>
		<%= link_to edit_admin_article_post_path(@article_post) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_article_post_path(@article_post), method: :delete, data: { confirm: "Delete article_post?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@article_post,[@article_post.article]) %>
	</div>
</div>
