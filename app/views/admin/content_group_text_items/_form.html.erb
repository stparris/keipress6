<% if @content_group_text_item.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
		<%= pluralize(@content_group_text_item.errors.count, "error") %> prohibited this page from being saved:
	</div>
  <ul>
  <% @content_group_text_item.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= hidden_field_tag :set_content_group_text_item, 1 %> 
<%= f.hidden_field :admin_id, value: @admin.id %>
<%= f.hidden_field :content_id %>
<%= f.hidden_field :content_type %>
<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, :class => "form-control" %>
</div>
<%= f.hidden_field :text_html_flag, value: 1 %>
<div id="content_select">
  <div class="form-group">
    <label for="content_item_css"><%= f.label :css_classes, "CSS space separated class names" %></label>
    <%= f.text_field :css_classes, :class => "form-control" %>
  </div>  
  <div class="form-group"> 
    <%= f.label :body %>
<% if @content_group_text_item.content_type == 'text' %>
    <%= f.text_area :body, 'data-provider': :summernote, :class => "form-control" %>
<% else %>
    <div class="form-control-border">
      <%= f.text_area :body, :class => "form-control codemirror-html" %>
    </div>
<% end %>
	</div>
</div>