<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>Upload <%= @image_upload.name %></h1>
		</div>
		<%= form_for([:admin, @image_upload],:html => {:role => 'form', :class => "formFor"}) do |f| %>
			<div class="form-group">
				<%= f.label :image %>			
				<%= f.file_field(:image, multiple: false, direct_upload: true, class: 'form-control-file') %>
				<%= f.hidden_field :quality, value: 'null' %>
				<%= f.hidden_field :max_width, value: 'null' %>
			</div>
			<hr />
			<%= button_tag(type: 'submit', class: "btn  btn-outline-secondary btn-med") do %>
				<i class="icon-ok"></i>
				Upload
			<% end %>
			<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med btn-right">
				<i class="icon-cancel"></i>
		   	 	Cancel</button>'), admin_image_path(@image_upload)) %>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@image_upload) %>
	</div>
</div>

