<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1><%= "#{@user_address.user.full_name} - #{@user_address.name} address" %></h1>
		</div>	
		<%= object_table(@user_address) %>
		<%= link_to edit_admin_user_address_path(@user_address) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_user_address_path(@user_address), method: :delete, data: { confirm: "Delete addresse?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@user_address,[@user]) %>
	</div>
</div>
