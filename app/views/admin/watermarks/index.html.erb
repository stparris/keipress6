<div class="row">
	<div class="col-md-12">
		<div class="page-header">
		  <h1>Watermarks</h1>
		</div>
		<table id="watermarks_index" class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Type</th>
					<th>Name</th>
					<th>Watermark</th>
          <th>Info</th>
          <th>Copy</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
<% @watermarks.each do |watermark| %>
        <tr>
          <td><%= link_to watermark.watermark_type.capitalize, admin_watermark_path(watermark) %></td>
          <td><%= link_to watermark.name, admin_watermark_path(watermark) %></td>
  <% if watermark.image.attached? %>
        	<td><%= link_to image_tag(watermark.image.variant(resize: "100x100")), admin_watermark_path(watermark) %></td>
          <td>
            <ul>
              <li>Orientation: <%= watermark.orientation %></li>
              <li>Size: <%= watermark.size %></li>
            </ul>
          </td>
  <% else %>
          <td><%= link_to raw(watermark.text), admin_watermark_path(watermark) %></td>
          <td>
            <ul>
              <li>Orientation: <%= watermark.orientation %></li>
              <li>Size: <%= watermark.size %></li>
              <li>Font: <%= watermark.font %></li>
              <li>Text Color: <span style="padding: 2px 20px;border: solid 1px #000;background-color: rgba(<%= watermark.color %>,1);"><%= watermark.color %></li></span>
            </ul>
          </td>
  <% end %>
          <td></td>
          <td><%= link_to raw('<i class="icon-zoom-in"></i>'), admin_watermark_path(watermark) %></td>
          <td><%= link_to raw('<i class="icon-pencil"></i>'), edit_admin_watermark_path(watermark) %></td>
          <td><%= link_to raw('<i class="icon-trash"></i>'), admin_watermark_path(watermark), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
<% end %>
			<%= raw('<tr><td colspan="8">No watermarks created/uploaded.</td></tr>') if @watermarks.count == 0 %>
			</tbody>
		</table>
		<%= link_to new_admin_watermark_path do %>
			<button type="button" class="btn  btn-outline-secondary btn-med"><i class="icon-plus"></i> New Watermark</button>
		<% end %>
	</div>
</div>
