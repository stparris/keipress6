<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image,  :class => "form-control-file" %>
</div>
<div class="form-group">
  <%= f.label :size %>
  <%= f.select :size, {'Large'=>'large','Medium'=>'medium','Small'=>'small','X-Small'=>'x-small','XX-Small'=>'xx-small'}, {prompt: 'Please select'}, :class => "form-control" %>
</div>

