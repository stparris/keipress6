<div class="row">
	<div class="col-md-9">
		<div class="page-header">
		  <h1>Edit Column <%= @row_column.position %></h1>
		</div>
		<%= form_for([:admin, @row_column],:html => {:role => 'form', :class => "formFor"}) do |f| %>
			<%= render partial: 'form', locals: {f:f} %>
			<hr />
			<%= button_tag(type: 'submit', class: "btn  btn-outline-secondary btn-med") do %>
				<i class="icon-ok"></i>
				Save
			<% end %>
<% if @page %>
			<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med btn-right">
				<i class="icon-cancel"></i>
		   	 	Cancel</button>'), admin_page_path(@page)) %>
<% else %>
			<%= link_to(raw('<button type="button" class="btn  btn-outline-secondary btn-med btn-right">
				<i class="icon-cancel"></i>
		   	 	Cancel</button>'), admin_row_column_path(@row_column)) %>
<% end %>		
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@row_column,[@row_column.container_row.container,@row_column.container_row]) %>
	</div>
</div>
