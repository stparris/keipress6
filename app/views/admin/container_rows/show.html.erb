<div class="row">
	<div class="col-md-9">
		<div class="page-header">
			<h1><%= @container_row.container.name %> Row <%= @container_row.position %></h1>
		</div>	
		<%= object_table(@container_row) %>
		<%= link_to edit_admin_container_row_path(@container_row) do %>
			<button type="submit" class="btn  btn-outline-secondary"><i class="icon-pencil"></i> Edit</button>
		<% end %>
		&nbsp;&nbsp;<%= link_to admin_container_row_path(@container_row), method: :delete, data: { confirm: "Delete container_row?" } do %>
			<button type="submit" class="btn btn-danger"><i class="icon-trash"></i> Delete</button>
		<% end %>
	</div>
	<div class="col-md-3">
		<%= operations_menu(@container_row,[@container_row.container]) %>
	</div>
</div>
<hr/>
<%= render partial: 'admin/row_columns/index' %>
